<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_9"
    android:layout_marginLeft="@dimen/dp_13"
    android:layout_marginTop="@dimen/dp_7"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_80">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/iv_course"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tv_sub_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_6" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_3"
            android:background="@drawable/bantouming_bg">

            <TextView
                android:id="@+id/tv_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_play_count"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_4"
                android:drawableLeft="@drawable/play"
                android:drawablePadding="@dimen/dp_2"
                android:text="@string/play_count"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_7" />

            <TextView
                android:id="@+id/tv_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_toRightOf="@id/tv_play"
                android:text="2000"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_7" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_3">

        <TextView
            android:id="@+id/tv_course_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="4节课"
            android:textColor="#909399"
            android:textSize="@dimen/sp_6" />

        <RelativeLayout
            android:layout_width="@dimen/dp_30"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">


            <ProgressBar
                android:id="@+id/progress_learn"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_centerInParent="true"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/layer_list_progress_drawable" />

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:gravity="center_vertical"
                android:text="50%"
                android:textColor="#4A4A4A"
                android:textSize="@dimen/sp_6"

                />

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>