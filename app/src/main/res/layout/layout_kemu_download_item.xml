<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/check_course"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:background="@drawable/note_check_selector"

            android:button="@null" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_toRightOf="@id/check_course">

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignParentTop="true"
                android:text=" 2132313131231"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_8" />


            <RelativeLayout
                android:id="@+id/ll_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/tv_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    android:text="展开"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_7" />

                <ImageView
                    android:id="@+id/iv_open"
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_3"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_open"
                    android:background="@drawable/zhankai" />
            </RelativeLayout>

            <!--<ProgressBar-->
            <!--android:id="@+id/progress_download"-->
            <!--style="@style/Widget.AppCompat.ProgressBar.Horizontal"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dp_3"-->
            <!--android:layout_below="@id/tv_course_name"-->
            <!--android:layout_marginTop="@dimen/dp_5"-->
            <!--android:max="100"-->
            <!--android:progress="50"-->
            <!--android:progressDrawable="@drawable/layer_list_progress_drawable"-->
            <!--android:visibility="gone" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_9"
                android:layout_below="@id/tv_course_name"
                android:layout_marginTop="@dimen/dp_4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_9"
                    android:layout_centerVertical="true"
                    android:text="已完成："
                    android:textColor="#909399"
                    android:textSize="@dimen/sp_7"
                    />
                <TextView
                    android:id="@+id/tv_done"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_9"
                    android:layout_centerVertical="true"
                    android:text="2"
                    android:textColor="#909399"
                    android:textSize="@dimen/sp_7"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_9"
                    android:layout_centerVertical="true"
                    android:text="下载中："
                    android:textColor="#909399"
                    android:textSize="@dimen/sp_7"
                    />
                <TextView
                    android:id="@+id/tv_downloading"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_9"
                    android:layout_centerVertical="true"
                    android:text="2"
                    android:textColor="#909399"
                    android:textSize="@dimen/sp_7"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_9"
                    android:layout_centerVertical="true"
                    android:text="总下载："
                    android:textColor="#909399"
                    android:textSize="@dimen/sp_7"
                    />
                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_9"
                    android:layout_centerVertical="true"
                    android:text="2"
                    android:textColor="#909399"
                    android:textSize="@dimen/sp_7"
                    />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_video_download"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_17"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F2F2F2 "

        />
</LinearLayout>