<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_37"
    android:layout_marginTop="@dimen/dp_8"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/check_video"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_gravity="center_vertical"
        android:background="@drawable/note_check_selector"
        android:button="@null" />

    <FrameLayout
        android:layout_width="@dimen/dp_37"
        android:layout_height="@dimen/dp_37"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_8">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:layout_gravity="center"
            android:background="#80000000"
            android:padding="@dimen/dp_13" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_13"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="古诗里的语法赏析,古诗里的语法赏析古诗里的语的语法..."
            android:textColor="@color/black"
            android:textSize="@dimen/sp_7" />

        <ProgressBar

            android:id="@+id/progress_download"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_3"
            android:layout_below="@id/tv_video_name"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_5"

            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/layer_list_progress_drawable" />

        <TextView

            android:id="@+id/tv_download_status"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="下载中"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/sp_7" />

        <TextView
            android:id="@+id/tv_download_size"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/tv_download_status"
            android:text="2.0M"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/sp_7" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_toRightOf="@id/tv_download_size"
            android:text="/"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/sp_7" />

        <TextView
            android:id="@+id/tv_video_size"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_toRightOf="@id/tv"
            android:text="4.0M"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/sp_7" />
    </RelativeLayout>
</LinearLayout>