<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dp_7"
    android:layout_marginRight="@dimen/dp_7"
    android:background="@drawable/normal_item_bac">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_15">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_today_learn"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:src="@drawable/today_learn" />

                <TextView
                    android:id="@+id/tv_today_learn_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_marginTop="@dimen/dp_0"
                    android:layout_toRightOf="@id/iv_today_learn"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@id/tv_today_learn_time"
                    android:text="分钟"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_today_learn_time"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_toRightOf="@id/iv_today_learn"
                    android:text="@string/today_learn"
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/sp_7" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/iv_total_learn"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:src="@drawable/total_learn" />

                <TextView
                    android:id="@+id/tv_total_learn_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_toRightOf="@id/iv_total_learn"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@id/tv_total_learn_time"
                    android:text="分钟"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_total_learn_time"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_toRightOf="@id/iv_total_learn"
                    android:text="@string/total_learn"
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/sp_7" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/iv_class_rank"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:src="@drawable/class_rank" />

                <TextView
                    android:id="@+id/tv_class_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_toRightOf="@id/iv_class_rank"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@id/tv_class_rank"
                    android:text="名"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_class_rank"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_toRightOf="@id/iv_class_rank"
                    android:text="@string/class_rank"
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/sp_7" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#F2F2F2 " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_9"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/self_class_learn_time_rank"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_8" />

                <RadioGroup
                    android:id="@+id/rg_class_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_class_today"
                        style="@style/learn_duration_radiobutton"
                        android:text="今日"
                    android:checked="true"
                        />

                    <RadioButton
                        android:id="@+id/rb_class_week"
                        style="@style/learn_duration_radiobutton"
                        android:layout_marginLeft="@dimen/dp_9"
                        android:text="本周"

                        />

                    <RadioButton
                        android:id="@+id/rb_class_total"
                        style="@style/learn_duration_radiobutton"
                        android:layout_marginLeft="@dimen/dp_9"
                        android:text="累计"

                        />
                </RadioGroup>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_class_rank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="match_parent"
                android:background="#F2F2F2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grade_learn_time_rank"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_8" />

                <RadioGroup
                    android:id="@+id/rg_grade_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:orientation="horizontal">

                    <RadioButton
                        android:checked="true"
                        android:id="@+id/rb_grade_today"
                        style="@style/learn_duration_radiobutton"
                        android:text="今日"

                        />

                    <RadioButton
                        android:id="@+id/rb_grade_week"
                        style="@style/learn_duration_radiobutton"
                        android:layout_marginLeft="@dimen/dp_9"
                        android:text="本周"

                        />

                    <RadioButton
                        android:id="@+id/rb_grade_total"
                        style="@style/learn_duration_radiobutton"
                        android:layout_marginLeft="@dimen/dp_9"
                        android:text="累计"

                        />
                </RadioGroup>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_grade_rank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_centerInParent="true"
            android:src="@drawable/search_empty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_empty"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/learn_driation_tip"
            android:textColor="@color/dark_gray_text"
            android:textSize="@dimen/sp_7" />
    </RelativeLayout>
</RelativeLayout>