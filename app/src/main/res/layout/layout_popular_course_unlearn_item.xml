<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_9"
    android:layout_marginLeft="@dimen/dp_13"
    android:layout_marginTop="@dimen/dp_7"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_80">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/iv_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_5">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  />
            <TextView
                android:id="@+id/tv_sub_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_7"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bantouming_bg">

            <TextView
                android:id="@+id/tv_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_play_count"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_4"
                android:drawableLeft="@drawable/play"
                android:drawablePadding="@dimen/dp_2"
                android:text="@string/play_count"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_7" />

            <TextView
                android:id="@+id/tv_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_toRightOf="@id/tv_play"
                android:text="2000"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_7" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_8" />

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_3">

        <TextView
            android:id="@+id/tv_course_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="4节课"
            android:textColor="#909399"
            android:textSize="@dimen/sp_6" />

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/dp_2"
            android:drawableRight="@drawable/go_study"
            android:text="@string/start_learn"
            android:textColor="#909399"
            android:textSize="@dimen/sp_6" />

    </RelativeLayout>
</LinearLayout>