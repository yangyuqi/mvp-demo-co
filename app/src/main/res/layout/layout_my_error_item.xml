<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_8">

    <CheckBox
        android:id="@+id/cb_problem"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_6"
        android:background="@drawable/note_check_selector"
        android:button="@null"
        android:visibility="gone" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/cb_problem"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yellow_radius1_bac"
                android:text="10.10"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_8" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_8" />

        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_exercise_cover"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_8"
            android:scaleType="fitXY" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_answer"
                android:textColor="#EF7459"
                android:textSize="@dimen/sp_8" />

            <TextView
                android:id="@+id/tv_my_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_toRightOf="@id/tv_left"
                android:text="B"
                android:textColor="#EF7459"
                android:textSize="@dimen/sp_8" />

            <TextView
                android:id="@+id/tv_zhankai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_2"
                android:drawableRight="@drawable/zhankai"
                android:text="@string/right_answer"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_8" />

            <TextView
                android:id="@+id/tv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_2"
                android:drawableRight="@drawable/shouqi"
                android:text="@string/close"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_8"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llZhanKai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_left_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/right_answer"
                    android:textColor="#4E96FB "
                    android:textSize="@dimen/sp_8" />

                <TextView
                    android:id="@+id/tv_right_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_toRightOf="@id/tv_left_2"
                    android:text="B"
                    android:textColor="#4E96FB "
                    android:textSize="@dimen/sp_8" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_play"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/change_password_btn_gray">

                <TextView
                    android:id="@+id/tv_video_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:drawableLeft="@drawable/play_yellow"
                    android:drawablePadding="@dimen/dp_6"
                    android:text="古诗词赏析"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_8" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#F2F2F2" />
    </LinearLayout>

</RelativeLayout>