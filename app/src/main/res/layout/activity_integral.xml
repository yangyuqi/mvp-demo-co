<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/top_bac">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_7"
            android:src="@drawable/back" />


        <TextView
            android:text="积分详情"
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_11" />

    </RelativeLayout>

    <LinearLayout
        android:padding="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/sp_10"
                android:text="可用积分"/>

            <TextView
                android:layout_marginTop="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/sp_23"
                android:text="300"/>

            <View
                android:layout_marginRight="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/black"/>

            <TextView
                android:layout_marginTop="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/sp_10"
                android:text="积分记录"/>

            <ListView
                android:id="@+id/integral_ls"
                android:paddingRight="@dimen/dp_25"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/sp_10"
                android:text="积分规则"/>

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_9"
                android:text="积分获取"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>

            <TextView
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_9"
                android:text="1、登录:每日首次登录获5分。"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"/>

            <TextView
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_9"
                android:text="2、观看视频课程:积5分。"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"/>

            <TextView
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_9"
                android:text="3、视频互动答题:每题答对积5分，答错不积分。"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"/>

            <TextView
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_9"
                android:text="4、课程评论:评论1次积2分。"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"/>

            <TextView
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_9"
                android:text="5、每日积分上限100分。"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"/>

            <TextView
                android:layout_marginTop="@dimen/dp_20"
                android:textSize="@dimen/sp_9"
                android:text="积分计划"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>

            <TextView
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_9"
                android:text="积分回馈计划正在计划中，敬请期待！"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"/>


            <TextView
                android:textColor="@color/blue4E96FB"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_9"
                android:text="•点击进入视频播放页面即可积分"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"/>

            <TextView
                android:textColor="@color/blue4E96FB"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_9"
                android:text="•当日观看同一视频课程只积一分"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>